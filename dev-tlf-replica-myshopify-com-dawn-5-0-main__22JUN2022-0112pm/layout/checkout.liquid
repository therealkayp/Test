<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}

  </head>
  <style>
  
    body{
        font-family: 'Poppins';
      background-color: #fafafa;
    }
    .btn {
    background-color: #2e2e2e;
    border-radius: 60px;
}
    .field__input {
    background-color: #F0F1F3;
    border: 0;
    border-radius: 0;
}
    h1, h2, h3, h4, h5, h6, .heading-1 {
    font-family: 'Poppins';
}
    .field__input:focus, .field__input-wrapper--flag-focus .field__input {
    border-color: #ffffff00;
    -webkit-box-shadow: 0 0 0 1px #ffffff00;
    box-shadow: 0 0 0 1px #ffffff00;
}
#checkout-custom-tlf {
    max-width: 1300px;
    margin: 0 auto;
    display: flex;
}
    #order-summary {
    display: contents;
}
.copyright-text, .logo {
    display: none;
}
.step {
    min-width: 750px;
}
    .order-summary__sections {
    min-width: 530px;
}
    .content-box {
    border: 0;
}
    .content-box__row {
    padding: 0;
}
    a, .link {
    color: #2e2e2e;
}
    .input-checkbox:checked, .input-radio:checked {
    border-color: #2e2e2e;
}
    h2.section__title {
    font-weight: 600;
    font-size: 1.5em;
}
    .content-box__row~.content-box__row {
    border-top: 0;
}
    .review-block~.review-block {
    border-top: 0;
}
    .content-box__row--secondary {
    background-color: transparent;
}
    .content-box .field__input {
    background-color: #F0F1F3;
}
    span.order-summary-total {
    font-weight: 600;
    font-size: 1.5em;
    color: #2e2e2e;
}
    .section {
    background-color: white;
}
    .btn:hover, .sp-modal-toggle:hover {
    background-color: #c8c8c8;
}
    .order-summary-box {
    background-color: #ffffff;
}
    .icon-svg--color-accent {
    color: #2e2e2e;
}
    a:hover, .link:hover {
    color: #2e2e2e;
}
    .product-thumbnail::after {
    display: none;
}
    .product-thumbnail__wrapper {
    border-radius: 0;
}
    .product-thumbnail__image {
    margin: 0;
}
    .product-thumbnail {
    width: 67px;
    height: 100px;
    border-radius: 0;
}
    span.product-thumbnail__quantity {
    display: none;
    }
  </style>
 
  
  
  <body>
    <div id="checkout-custom-tlf">

    {{ skip_to_content_link }}
   
      <div class="alt-payment-methods">
            {{ alternative_payment_methods }}
      </div><br>
            {{ content_for_layout }}
            {{ content_for_footer }}
        
       
            {{ content_for_logo }}
         <div class="order-summary-box">
           <span class="order-summary-total">Total</span>
            {{ content_for_order_summary }}
          </div>
    {{ tracking_code }}
    </div>
  </body>
</html>
